@model toDoApp.Models.Task

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <!--add tag here -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class = "col-sm-10">
            @{
                var tags = @Model.Tags;
                foreach (var tag in tags)
                {
                    <p>@tag.Tag1</p>
                }
            }
        </dd>
        <!--add tag end-->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Task1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Task1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Isfinish)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Isfinish)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
